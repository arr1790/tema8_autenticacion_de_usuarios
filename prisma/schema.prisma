generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Repartidor {
  id       Int      @id @default(autoincrement())
  nombre   String
  telefono String
  pedidos  Pedido[]

  @@map("repartidores")
}

model Pedido {
  id                Int         @id @default(autoincrement())
  fecha_hora        DateTime
  nombre_cliente    String
  direccion_cliente String
  repartidorId      Int?
  repartidor        Repartidor? @relation(fields: [repartidorId], references: [id])
  pizzas            Pizza[]

  @@map("pedidos")
}

model Pizza {
  id      Int      @id @default(autoincrement())
  nombre  String
  precio  Float
  pedidos Pedido[]

  @@map("pizzas")
}
